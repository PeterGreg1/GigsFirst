@model GigsFirst.Models.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Home</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.shows[0].Venue.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.shows[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.shows[0].ShowDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.shows[0].ShowTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.shows[0].StatusID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.shows) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Venue.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShowTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StatusID)
        </td>
        <td>
            @Html.ActionLink("View", "View", new { id=item.ShowID })
        </td>
    </tr>
}

</table>